generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model for Google OAuth and Email/Password Auth
model User {
  id        String    @id @default(cuid())
  googleId  String?   @unique // Google's unique profile ID (optional for email auth)
  email     String    @unique
  name      String
  password  String?   // Hashed password for email/password auth
  avatarUrl String?   // Optional profile picture
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // --- E-commerce features to add later ---
  // cart      Cart?
  // wishlist  Wishlist?
  // orders    Order[]
}

